<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.knopflerfish.eclipse.core.ui"
   name="Osgi Ui Plug-in"
   version="1.0.0"
   provider-name=""
   class="org.knopflerfish.eclipse.core.ui.OsgiUiPlugin">

   <runtime>
      <library name="osgiui.jar">
         <export name="org.knopflerfish.eclipse.core.ui.launcher.*"/>
      </library> 
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.debug.ui"/>
      <import plugin="org.eclipse.jdt.debug.ui"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.knopflerfish.eclipse.core"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.forms"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
   </requires>
   
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
          icon="icons/obj16/knopflerfish_obj.gif"
          configTypeID="org.knopflerfish.eclipse.core.launcher.OsgiLaunchDelegate"
          id="org.knopflerfish.eclipse.core.ui.launchConfigImage">
    </launchConfigurationTypeImage>
   </extension>

	<extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
	    <launchConfigurationTabGroup
	        type="org.knopflerfish.eclipse.core.launcher.OsgiLaunchDelegate"
	        class="org.knopflerfish.eclipse.core.ui.launcher.TabGroup"
	        id="org.knopflerfish.eclipse.core.ui.launcher.TabGroup">
	    </launchConfigurationTabGroup>
	</extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <category
          name="OSGi"
          id="org.knopflerfish.eclipse.core.ui"/>
    <wizard
          class="org.knopflerfish.eclipse.core.ui.wizards.BundleProjectWizard"
          icon="icons/obj16/bundle_obj.gif"
          category="org.knopflerfish.eclipse.core.ui"
          project="true"
          name="Bundle Project"
          id="org.knopflerfish.eclipse.core.ui.wizards.BundleProjectWizard">
        <description>Create a Bundle Project</description>
    </wizard>
 </extension>
 <extension point="org.eclipse.ui.ide.projectNatureImages">
  <image 
    id="org.knopflerfish.eclipse.core.ui.bundleNatureImage"
    natureId="org.knopflerfish.eclipse.core.bundlenature"
    icon="icons/ovr16/bundle_ovr.gif">
  </image>
 </extension>
 <extension
       point="org.eclipse.ui.editors">
    <editor
          filenames="bundle.manifest,Manifest,Manifest.bundle"
          icon="icons/obj16/bundle_proj_obj.gif"
          class="org.knopflerfish.eclipse.core.ui.editors.BundleEditor"
          name="Bundle Editor"
          id="org.knopflerfish.eclipse.core.ui.editors.BundleEditor"
          />
 </extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="org.knopflerfish.eclipse.core.ui.preferences.OsgiPreferencePage"
          name="OSGi"
          id="org.knopflerfish.eclipse.core.ui.preferences.OsgiPreferencePage"/>
    <page
          class="org.knopflerfish.eclipse.core.ui.preferences.KnopflerfishPreferencePage"
          category="org.knopflerfish.eclipse.core.ui.preferences.OsgiPreferencePage"
          name="Knopflerfish"
          id="org.knopflerfish.eclipse.core.ui.preferences.KnopflerfishPreferencePage"/>
    <page
          class="org.knopflerfish.eclipse.core.ui.preferences.BundleSetPreferencePage"
          category="org.knopflerfish.eclipse.core.ui.preferences.OsgiPreferencePage"
          name="Bundle Sets"
          id="org.knopflerfish.eclipse.core.ui.preferences.BundleSetPreferencePage"/>
 </extension>

</plugin>
